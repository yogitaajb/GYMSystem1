<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="420dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/spacing_middle"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <!--  <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_25" />
-->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
<!-- android:background="#CCEE1324"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/spacing_large"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/spacing_large"
            android:paddingLeft="@dimen/spacing_large"
            android:paddingStart="@dimen/spacing_large">

            <TextView
                android:id="@+id/txt_pack_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Package."
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent"
                app:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="RS. 300"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent"
                app:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/txt_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="30 days"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/grey_60"
                app:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Buddha"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/colorAccent"
                android:textStyle="normal"
                app:fontFamily="serif" />


            <EditText
                android:id="@+id/et_personal_traning"
                style="@style/EditText.Flat.Grey"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/edit_text_round_bg_white"
                android:drawableEnd="@drawable/ic_expand_arrow"
                android:drawableRight="@drawable/ic_expand_arrow"
                android:editable="false"
                android:focusable="false"
                android:inputType="textNoSuggestions"
                android:hint="Personal Traning"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />

            <EditText
                android:id="@+id/et_coupon_code"
                style="@style/EditText.Flat.Grey"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/spacing_large"
                android:background="@drawable/edit_text_round_bg_white"
                android:inputType="text"
                android:hint="Enter Coupon"
                android:visibility="gone"
                android:paddingLeft="@dimen/spacing_middle"
                android:paddingRight="@dimen/spacing_middle" />


            <Button
                android:id="@+id/btn_make_payment"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="Proceed to Online Payment"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
                app:fontFamily="serif" />
            <Button
                android:id="@+id/btn_offline_payment"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="Proceed to Offline Payment"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/colorAccentDark"
                android:textStyle="bold"
                app:fontFamily="serif" />


        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>
