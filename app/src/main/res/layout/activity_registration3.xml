<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_medium" />
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="Upload Profie"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_60" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@color/grey_10"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_person" />

                </LinearLayout>
                <View
                    android:id="@+id/lyt_idproof"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_medium" />
                <TextView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="Upload ID Proof"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/grey_60" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/spacing_small" />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@color/grey_10"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgview_idproof"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_person" />

                </LinearLayout>
              <!--  <LinearLayout
                    android:id="@+id/lyt_idproof"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:gravity="center_vertical"
                        android:text="ID Proof"
                        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                        android:textColor="@color/grey_60" />

                    <View
                        android:layout_width="@dimen/spacing_middle"
                        android:layout_height="0dp" />

                    <ImageView
                        android:id="@+id/imgview_idproof"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="7dp"
                        app:srcCompat="@drawable/not_available" />
                    <ImageButton
                        android:id="@+id/btn_idproof"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_photo_camera"
                        android:layout_marginBottom="15dp"
                        android:background="@color/colorAccent"
                        android:layout_gravity="bottom|right|end"/>
                </LinearLayout>-->
                <LinearLayout
                    android:id="@+id/lyt_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_large">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Declaration : "
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>
                        <android.support.v7.widget.AppCompatCheckBox
                            android:id="@+id/declaration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="-4dp"
                            android:paddingLeft="8dp"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:text="I Confirm that all answers above are true to the best of my knowledge and I believe I am able to Participate in exercise at Dynamic Health Club."
                            android:textColor="@color/grey_80"
                            android:theme="@style/Checkbox.Blue" />

                        <View
                            android:layout_width="@dimen/spacing_large"
                            android:layout_height="match_parent" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_large" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                      >
                    <android.support.v7.widget.AppCompatCheckBox
                        android:id="@+id/terms_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="-4dp"
                        android:paddingLeft="8dp"
                        android:layout_marginTop="@dimen/spacing_middle"
                        android:text=""
                        android:textColor="@color/blue_600"
                        android:textStyle="bold"
                        android:theme="@style/Checkbox.Blue" />
                        <EditText
                            android:id="@+id/txt_terms_condition"
                            style="@style/EditText.Flat.Grey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_round_bg_white"
                            android:text="Terms and Conditions. "
                            android:gravity="center"
                            android:editable="false"
                            android:focusable="false"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="-4dp"
                            android:paddingLeft="8dp"
                            android:layout_marginTop="@dimen/spacing_middle"
                            android:textColor="@color/blue_600"
                            android:textStyle="bold"
                            android:textSize="13sp"/>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spacing_large" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_large"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:orientation="horizontal">

                    <EditText
                        style="@style/EditText.Flat.Grey"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_round_bg_white"
                        android:hint="How did you hear about us ? "
                        android:gravity="center"
                        android:layout_weight="2"
                        android:editable="false"
                        android:focusable="false"
                        android:textColor="@color/grey_80"
                        android:paddingLeft="@dimen/spacing_middle"
                        android:paddingRight="@dimen/spacing_middle" />
                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="0dp" />

                    <EditText
                        android:id="@+id/et_hear_abt"
                        style="@style/EditText.Flat.Grey"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="2"
                        android:background="@drawable/edit_text_round_bg_white"
                        android:drawableEnd="@drawable/ic_expand_arrow"
                        android:drawableRight="@drawable/ic_expand_arrow"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Select"
                        android:textColor="@color/grey_80"
                        android:paddingLeft="@dimen/spacing_middle"
                        android:paddingRight="@dimen/spacing_middle" />

                </LinearLayout>

                <Button
                    android:id="@+id/bt_submit"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="-4dp"
                    android:layout_marginRight="-4dp"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:background="@drawable/btn_rect_green"
                    android:text="SUBMIT"
                    android:textAllCaps="false"
                    android:layout_marginBottom="@dimen/spacing_xlarge"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_smlarge"
            android:clickable="true"
            android:tint="@android:color/white"
            app:backgroundTint="@color/blue_grey_800"
            app:fabSize="normal"
            app:layout_anchor="@id/lyt_idproof"
            app:layout_anchorGravity="top|end|right"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_photo_camera" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_idproof"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_smlarge"
            android:clickable="true"
            android:tint="@android:color/white"
            app:backgroundTint="@color/blue_grey_800"
            app:fabSize="normal"
            app:layout_anchor="@id/lyt_form"
            app:layout_anchorGravity="top|end|right"
            app:rippleColor="@android:color/white"
            app:srcCompat="@drawable/ic_photo_camera" />

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
